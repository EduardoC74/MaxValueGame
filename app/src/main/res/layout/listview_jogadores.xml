<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="0.8dp"
        android:padding="0.1dp"
        android:background="#000000">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="0.1dp"
            android:paddingBottom="0.8dp"
            tools:ignore="RtlSymmetry"/>

        <ImageView
            android:id="@+id/jogadorImg"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:src="@drawable/avatar">
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="0.1dp"
            android:paddingBottom="0.8dp"
            tools:ignore="RtlSymmetry"/>

        <TextView
            android:id="@+id/nomeText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#DCDCDC"
            android:gravity="center_vertical|center_horizontal"
            android:text="Nome: "
            android:textSize="11sp"
            android:textStyle="normal" />

        <TextView
            android:textStyle="normal"
            android:textSize="11sp"
            android:gravity="center_vertical|center_horizontal"
            android:text="eduardo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/nome"
            android:background="#DCDCDC"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="0.1dp"
            android:paddingBottom="0.8dp"
            tools:ignore="RtlSymmetry"/>

        <TextView
            android:textStyle="normal"
            android:textSize="11sp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Nivel: "
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:id="@+id/nivelText"
            android:paddingBottom="1dp"
            android:background="#DCDCDC"
            />

        <TextView
            android:textStyle="normal"
            android:textSize="11sp"
            android:gravity="center_vertical|center_horizontal"
            android:text="11"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:id="@+id/nivel"
            android:paddingBottom="1dp"
            android:background="#DCDCDC"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="0.1dp"
            android:paddingBottom="0.8dp"
            tools:ignore="RtlSymmetry"/>

        <TextView
            android:textStyle="normal"
            android:textSize="11sp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Pontuação: "
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="match_parent"
            android:id="@+id/pontuacaoText"
            android:paddingBottom="1dp"
            android:background="#DCDCDC"
            />

        <TextView
            android:textStyle="normal"
            android:textSize="11sp"
            android:gravity="center_vertical|center_horizontal"
            android:text="364"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:id="@+id/pontuacao"
            android:paddingBottom="1dp"
            android:background="#DCDCDC"
            android:paddingEnd="0.1dp"
            />

    </LinearLayout>
</FrameLayout>